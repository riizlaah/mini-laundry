<UserControl x:Class="MiniLaundry.Views.ViewTransactions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniLaundry.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800" Background="White" Padding="4,4,4,4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="search" HorizontalAlignment="Right" TextChanged="TrySearch" Margin="0,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="209" Height="26" Padding="0,3,0,0"/>
        <GroupBox Header="Header Transactions" Grid.Row="1" Padding="4,4,4,4">
            <DataGrid Grid.Row="1" x:Name="headerTransacsTable" MouseLeftButtonUp="headerTransacSelected" IsReadOnly="True" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Id Pelanggan" Binding="{Binding CustomerId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Nama Pelanggan" Binding="{Binding Customer.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Nama Karyawan" Binding="{Binding Employee.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Waktu Transaksi" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm', TargetNullValue=''}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Estimasi Waktu Selesai" Binding="{Binding CompleteEstDate, StringFormat='dd/MM/yyyy HH:mm'}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Detail Transactions" Grid.Row="2" Margin="0,0,0,12">
            <DataGrid Grid.Row="1" x:Name="detailTransacsTable" IsReadOnly="True" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nama" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Tipe" Binding="{Binding Type}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Harga per Unit" Binding="{Binding Price}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Total Unit" Binding="{Binding TotalUnit}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Waktu Selesai" Binding="{Binding CompletedAt, StringFormat='dd/MM/yyyy HH:mm', TargetNullValue=''}"></DataGridTextColumn>
                    <DataGridTemplateColumn Header="Aksi">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Complete" Click="CompleteDetailTransac" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Label Content="View Transactions" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
    </Grid>
</UserControl>
