<UserControl x:Class="testWPF.Views.ManageEmployees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White" Padding="5,5,5,5">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Height='36' LastChildFill="False" Margin="0,0,0,8">
                <Button DockPanel.Dock="Left" Padding="12,4,12,4">Tambah</Button>
                <TextBox DockPanel.Dock="Left" Width="150" Margin="6,0,6,0"></TextBox>
                <Button DockPanel.Dock="Left">
                    <Image Width="24" Margin="4,4,4,4" Source="/Assets/refresh-cw.png"/>
                </Button>
                <Button DockPanel.Dock="Right" Padding="12,4,12,4">Hapus</Button>
                <Button DockPanel.Dock="Right" Padding="12,4,12,4" Margin="0,0,6,0">Edit</Button>
            </DockPanel>
            <DataGrid x:Name="employeeTable" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Nama" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Password" Binding="{Binding Password}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Alamat" Binding="{Binding Address}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Tanggal Lahir" Binding="{Binding DateOfBirth, StringFormat='dd/MM/yyyy'}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Pekerjaan" Binding="{Binding Job.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Gaji" Binding="{Binding Salary, StringFormat='C2', ConverterCulture='id-ID'}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
