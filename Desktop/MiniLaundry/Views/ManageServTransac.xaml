<UserControl x:Class="testWPF.Views.ManageServTransac"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White" Padding="5,5,5,5">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Height='36' LastChildFill="False" Margin="0,0,0,8">
                <Button x:Name="delete" DockPanel.Dock="Right" Padding="12,4,12,4" Click="delService" TabIndex="5">Hapus</Button>
            </DockPanel>
            <ContentControl x:Name="detailPanel" DockPanel.Dock="Bottom" Height="150" Padding="8,8,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="341*"></ColumnDefinition>
                        <ColumnDefinition Width="200*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="unit" HorizontalAlignment="Right" Margin="0,37,362,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Height="18" TabIndex="6" Grid.ColumnSpan="3"/>
                    <Label Content="Nama Layanan" Margin="2,10,0,0" VerticalAlignment="Top" Padding="0,0,0,0" Height="16" RenderTransformOrigin="-0.009,0.652" HorizontalAlignment="Left" Width="90"/>
                    <ComboBox x:Name="serviceName" HorizontalAlignment="Right" Margin="0,10,362,0" VerticalAlignment="Top" Width="115" SelectedIndex="0" Height="22" DisplayMemberPath="Name" SelectedValuePath="Id" TabIndex="12" Grid.ColumnSpan="3"  />
                    <Label Content="Total Unit" HorizontalAlignment="Left" Margin="2,37,0,0" VerticalAlignment="Top" Padding="0,0,0,0" Height="16" Width="74" RenderTransformOrigin="-0.009,0.652"/>

                    <Button Content="Kirim" Margin="0,114,0,0" VerticalAlignment="Top" Padding="12,4,12,4" Height="26" Click="save" Grid.Column="3" RenderTransformOrigin="0.503,0.205" TabIndex="14"/>
                    <GroupBox Grid.Column="2" Header="Pelanggan" Padding="4,4,4,4">
                        <Grid>
                            <Label Content="No. HP" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Padding="0,0,0,0" Height="16" Width="97" RenderTransformOrigin="-0.009,0.652"/>
                            <TextBox x:Name="address" HorizontalAlignment="Right" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" Height="59" TabIndex="9"/>
                            <Label Content="Alamat" HorizontalAlignment="Left" Margin="0,59,0,0" VerticalAlignment="Top" Padding="0,0,0,0" Height="16" Width="60" RenderTransformOrigin="-0.009,0.652"/>
                            <TextBox x:Name="custName" HorizontalAlignment="Right" Margin="0,35,2,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" Height="18" TabIndex="8"/>
                            <Label Content="Nama Pelanggan" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top" Padding="0,0,0,0" Height="16" Width="97" RenderTransformOrigin="-0.009,0.652"/>
                            <TextBox x:Name="phoneNum" HorizontalAlignment="Right" Margin="0,10,108,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="18" TabIndex="8"/>
                            <Label HorizontalAlignment="Left" Margin="234,8,0,85" FontSize="9">
                                <Hyperlink Click="AddNewUser">Tidak ada? Tambah</Hyperlink>
                            </Label>
                        </Grid>
                    </GroupBox>
                    <Button Content="Tambah" Margin="101,0,362,0" VerticalAlignment="Center" Padding="12,4,12,4" Height="26" Click="addService" RenderTransformOrigin="0.503,0.205" TabIndex="14" Grid.ColumnSpan="3"/>
                    <Label Grid.Column="3" Content="Total" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top"/>
                    <Label Grid.Column="3" Content="Estimasi Waktu" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="estPrice" Grid.Column="3" Content="Rp0" HorizontalAlignment="Left" Margin="104,33,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Width="98" HorizontalContentAlignment="Right"/>
                    <Label x:Name="estTime" Grid.Column="3" Content="14 Jam" HorizontalAlignment="Left" Margin="104,86,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="98" FontSize="10" HorizontalContentAlignment="Right"/>

                </Grid>
            </ContentControl>
            <DataGrid x:Name="serviceTable" IsReadOnly="True" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nama Layanan" Binding="{Binding Service.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Harga" Binding="{Binding Service.Price, StringFormat='C0', ConverterCulture='id-ID'}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Total Unit" Binding="{Binding TotalUnit}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Estimasi Durasi" Binding="{Binding Service.EstimationDuration}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Price, StringFormat='C0', ConverterCulture='id-ID'}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
