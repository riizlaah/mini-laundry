<Window x:Class="MiniLaundry.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniLaundry.Views"
        mc:Ignorable="d"
        Title="Tambah Pelanggan" Height="341" Width="331" Padding="5,5,5,5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
        <Label Content="Nama" Margin="52,5,0,0" VerticalAlignment="Top" Padding="5,0,5,0" Grid.Row="1" HorizontalAlignment="Left" Width="71"/>
        <Label Content="No. HP" HorizontalAlignment="Left" Margin="52,26,0,0" VerticalAlignment="Top" Width="71" Padding="5,0,5,0" Grid.Row="1"/>
        <Label Content="Alamat" HorizontalAlignment="Left" Margin="52,47,0,0" VerticalAlignment="Top" Width="71" Padding="5,0,5,0" Grid.Row="1"/>
        <TextBox x:Name="name" HorizontalAlignment="Right" Margin="0,3,61,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="phoneNum" HorizontalAlignment="Right" Margin="0,26,61,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="address" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Margin="0,49,61,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Grid.Row="1" Height="58" Grid.ColumnSpan="2"/>
        <Button Grid.Column="1" Click="save" Content="Simpan" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" Width="146" Padding="5,5,5,5"/>
        <Rectangle Grid.ColumnSpan="2" Height="98" Fill="DodgerBlue" VerticalAlignment="Top"/>
        <Image Grid.Column="1" Source="/Assets/user.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="60" Margin="11,5,0,0"/>
        <Label Content="Tambah Pelanggan" Margin="98,65,103,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
